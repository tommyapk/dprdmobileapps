<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:id="@+id/profillayout"
    tools:context="com.ProfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:id="@+id/textProfile"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgViewprofile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/dda"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#BBB9B9"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/btnGantiPhoto"
                android:textColor="#fff"
                android:background="@drawable/btn_bg_shape"
                android:text="Ganti Foto"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cardprofile"
            android:layout_below="@+id/textProfile"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:outlineSpotShadowColor="#AAA1A1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masyarakat"
                    android:id="@+id/textViewMasyarakat"
                    android:textSize="20dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Irsan Mansyur"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/textViewName"
                    android:paddingTop="5px"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardprofile2"
            android:layout_below="@+id/textProfile"
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profil"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextNama"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_person_black"
                        android:hint="Nama"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextEmail"
                        android:enabled="false"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_email_black"
                        android:hint="Email"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextTglLahir"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_tgllahir_black"
                        android:hint="Tanggal Lahir"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextNoTelp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_phone_black"
                        android:hint="No.Telp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextAlamat"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_alamat_black"
                        android:hint="Alamat"/>

                    <EditText
                        android:id="@+id/editTextAbout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:ems="10"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_person_black"
                        android:hint="About Me"
                        android:inputType="textMultiLine" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Simpan"
                        android:id="@+id/btnSimpan"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_bg_shape"
                        android:layout_gravity="right"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:text="Keluar"
                    android:id="@+id/btnLogOut"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/btn_logout"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
</ScrollView>