<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardviewaspirasi"
    card_view:cardCornerRadius="6dp"
    android:clickable="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:background="#F1F1F1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgUser"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:src="@drawable/dda"
                android:layout_width="25pt"
                android:layout_height="25pt" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama"
                    android:text="Tommy Darmawansyah"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/komisiname"
                    android:text="Di Kirim Ke KOMISI A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_penanggung"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:text="Penanggun"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200px"
                android:textSize="18dp"
                android:padding="6px"
                android:id="@+id/isi_aspirasi"
                android:textColor="#000000"
                android:text="isi aspirasi"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E2E1E1"
            android:padding="10px"
            android:id="@+id/ly_bawah"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dateCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="21/08/2019"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_date_black"
                android:layout_gravity="left"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Hapus"
                android:id="@+id/btn_hapus_aspirasi"
                android:textColor="#fff"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_bg_shape"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
